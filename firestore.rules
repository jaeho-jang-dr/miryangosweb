rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin or staff
    function isAuthorizedStaff() {
      return isAuthenticated() &&
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff']);
    }

    // Helper function to check if user is admin only
    function isAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Public Content (Notices, Archives, Staff)
    // Read: Public
    // Write: Authenticated Only (Admin)
    match /notices/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /articles/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /staff/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Inquiries
    // Create: Public
    // Read/Update/Delete: Authenticated Only (Admin)
    match /inquiries/{document=**} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated();
    }

    // Clinical Data (Patients, Visits) - STRICTLY SECURE
    // All Access: Authenticated Only (Admin/Staff)
    // SECURITY: Protected healthcare information (PHI/EMR)
    match /patients/{document=**} {
      allow read, write: if isAuthorizedStaff();
    }

    match /visits/{document=**} {
      allow read, write: if isAuthorizedStaff();
    }

    // Users Collection (Added for Admin Dashboard)
    // Users can read their own data, Admin can manage all users
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Settings (Clinic Info)
    // Read: Public
    // Write: Authenticated Only (Admin)
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
